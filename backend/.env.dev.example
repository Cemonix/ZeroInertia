# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zero_inertia_dev
DB_USER=postgres
DB_PASSWORD=dev_postgres_password_here
DB_DRIVER=postgresql+asyncpg

# Application Configuration
PROJECT_NAME=Zero Inertia (Dev)
API_V1_STR=/api/v1

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:5173

# AI Service Configuration
AI_API_KEY=dev_ai_api_key_here

# OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
# Create a separate OAuth client for development with localhost redirect URI
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# JWT Configuration
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=dev_jwt_secret_key_change_me_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=dev_redis_password_here

# Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=debug

# Firebase Push Notifications
# Optional for development - can leave empty or point to test credentials
FIREBASE_SERVICE_ACCOUNT_PATH=firebase-service-account-dev.json

# Rate Limiting Configuration
RATE_LIMIT_ANON_PER_MIN=60
RATE_LIMIT_AUTH_PER_MIN=120
RATE_LIMIT_BURST_MULTIPLIER=2.0
RATE_LIMIT_EXEMPT_PATHS=/health,/csrf,/docs,/redoc,/openapi.json
RATE_LIMIT_STORAGE_URI=redis://:dev_redis_password_here@localhost:6379/1

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=dev_grafana_password_change_me_in_production
GRAFANA_ROOT_URL=http://localhost:3000

# Metrics endpoint
ENABLE_METRICS=true