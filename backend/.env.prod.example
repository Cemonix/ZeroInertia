# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=zero_inertia
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_DRIVER=postgresql+asyncpg

# Application Configuration
PROJECT_NAME=Zero Inertia
API_V1_STR=/api/v1

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=https://zeroinertia.cemonix.dev

# AI Service Configuration
# Add your AI API key if you plan to use AI features
AI_API_KEY=your_ai_api_key_here

# OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
OAUTH_REDIRECT_URI=https://zeroinertia.cemonix.dev/api/v1/auth/google/callback

# JWT Configuration
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your_secure_random_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here

# Environment
ENVIRONMENT=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
LOG_LEVEL=info

# Firebase Push Notifications
# Download service account key from Firebase Console > Project Settings > Service Accounts
# Place the JSON file in the backend directory and update the path below
FIREBASE_SERVICE_ACCOUNT_PATH=firebase-service-account.json

# Rate Limiting Configuration
RATE_LIMIT_ANON_PER_MIN=60
RATE_LIMIT_AUTH_PER_MIN=120
RATE_LIMIT_BURST_MULTIPLIER=1.0
RATE_LIMIT_EXEMPT_PATHS=/health,/csrf,/docs,/redoc,/openapi.json
RATE_LIMIT_STORAGE_URI=redis://:your_redis_password_here@redis:6379/1

# Monitoring / Dashboards
METRICS_API_KEY=your_metrics_api_key_here
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password_here
GRAFANA_DOMAIN=zeroinertia.cemonix.dev

UMAMI_DB_NAME=umami
UMAMI_DB_USER=umami
UMAMI_DB_PASSWORD=your_umami_db_password_here
UMAMI_APP_SECRET=your_32_char_hex_secret_here