zeroinertia.cemonix.dev {
    # Backend API routes - proxy to backend container
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Health check endpoint
    handle /health {
        reverse_proxy backend:8000
    }

    # Frontend SPA - serve all other routes (nginx inside will also proxy /api/ to backend)
    reverse_proxy frontend:80
}

grafana.zeroinertia.cemonix.dev {
    # Grafana monitoring dashboard
    reverse_proxy grafana:3000
}